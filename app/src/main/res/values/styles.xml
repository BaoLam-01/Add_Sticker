<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <style name="Theme.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="TextBoldStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/app_custom_font_family</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextItalicStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/app_custom_font_family</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>
